{% extends "base.twig" %}
{% block content %}
	<article class="post-type-{{post.post_type}} {{post.post_type}}-{{post.slug}} post-id-{{post.ID}}" id="post-{{post.ID}}">

		{% include "views/partial/page-header.twig" %}

		<section class="section-page-{{ post.slug }}">
			<div class="container">
				<div class="row">
					<div class="col-12 py-2 my-2">
						<h1>Page {{ title }}</h1>
						<h3>{{ post.post_excerpt }}</h3>
					</div>
					<div class="col-12 py-2 my-2">
						<img src="{{ placeholder }}/1400x600/?wordpress" alt="" class="img-fluid">
					</div>
					<div class="col-12 py-2 my-2">
						{{ content }}
					</div>
				</div>
			</div>
		</section>
	</article>
{% endblock %}